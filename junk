param (
   [string]$Directory = ".",
   [string]$FileExtension = "*.txt",
   [string]$OldWord,
   [string]$NewWord,
   [string]$SkipWord
)

$counter = 0

Get-ChildItem -Path $Directory -Filter $FileExtension -Recurse | ForEach-Object {
   $file = $_.FullName
   $fileContent = Get-Content $file
   $fileContent = $fileContent | Where-Object { $_ -notmatch $SkipWord } | ForEach-Object { $_ -replace [regex]::Escape($OldWord), $NewWord, 'IgnoreCase' }
   $fileContent = $fileContent -replace "`r`n$", "`r`n"
   Set-Content $file $fileContent
   $counter++
}

Write-Host "$counter files were updated."


.\replace_word.ps1 -Directory "C:\example" -FileExtension "*.txt" -OldWord "hello" -NewWord "world" -SkipWord "^#.*"
