import java.io.File;
import java.io.IOException;
import java.nio.charset.StandardCharsets;
import java.nio.file.Files;
import java.util.ArrayList;
import java.util.List;
import java.util.regex.Matcher;
import java.util.regex.Pattern;

public class SearchFiles {

    public static void main(String[] args) {
        String rootPath = "C:\\Users\\username\\Documents\\root-folder"; // replace with the path to the root folder you want to search
        String emailRegex = "\\b[A-Z0-9._%+-]+@[A-Z0-9.-]+\\.[A-Z]{2,}\\b"; // regex pattern for email addresses
        String userRegex1 = "\\b(i|I)\\d{6}\\b"; // regex pattern for username pattern 1
        String userRegex2 = "\\b(c|C)\\d{6}\\b"; // regex pattern for username pattern 2

        List<File> filesWithEmails = new ArrayList<>();
        List<File> filesWithUsernames = new ArrayList<>();
        List<File> filesWithBoth = new ArrayList<>();

        try {
            Files.walk(new File(rootPath).toPath())
                    .filter(Files::isRegularFile)
                    .forEach(file -> {
                        String fileContent;
                        try {
                            fileContent = new String(Files.readAllBytes(file), StandardCharsets.UTF_8);
                            boolean hasEmail = false;
                            boolean hasUser1 = false;
                            boolean hasUser2 = false;

                            // check for email addresses
                            Pattern emailPattern = Pattern.compile(emailRegex, Pattern.CASE_INSENSITIVE);
                            Matcher emailMatcher = emailPattern.matcher(fileContent);
                            while (emailMatcher.find()) {
                                hasEmail = true;
                            }

                            // check for username pattern 1
                            Pattern userPattern1 = Pattern.compile(userRegex1);
                            Matcher userMatcher1 = userPattern1.matcher(fileContent);
                            while (userMatcher1.find()) {
                                hasUser1 = true;
                            }

                            // check for username pattern 2
                            Pattern userPattern2 = Pattern.compile(userRegex2);
                            Matcher userMatcher2 = userPattern2.matcher(fileContent);
                            while (userMatcher2.find()) {
                                hasUser2 = true;
                            }

                            if (hasEmail && hasUser1 && hasUser2) {
                                filesWithBoth.add(file.toFile());
                            } else if (hasEmail && hasUser1) {
                                filesWithBoth.add(file.toFile());
                            } else if (hasEmail && hasUser2) {
                                filesWithBoth.add(file.toFile());
                            } else if (hasUser1 && hasUser2) {
                                filesWithBoth.add(file.toFile());
                            } else if (hasEmail) {
                                filesWithEmails.add(file.toFile());
                            } else if (hasUser1 || hasUser2) {
                                filesWithUsernames.add(file.toFile());
                            }

                        } catch (IOException e) {
                            e.printStackTrace();
                        }
                    });

            // print results
            System.out.println("Files with email addresses (#001):");
            for (File file : filesWithEmails) {
                System.out.println(file.getAbsolutePath());
            }

            System.out.println("\nFiles with usernames (#002):");
            for (File file : filesWithUsernames) {
                System.out.println(file.getAbsolutePath());
            }

            System.out.println("\nFiles with both (#003):");
            for (File file : filesWithBoth) {
                System.out.println(file.getAbsolutePath() + " -- Patterns found: " +
                        (file.getName().matches(emailRegex) ? "#001" : "") +
                        (file.getName().matches(userRegex1) ||
